<%= simple_form_for @blog, html: { multipart: true } do |f| %>

  <div class="form-inputs" data-no-turbolink>
    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :teaser %>
      <%= f.text_field :teaser, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.input :tag_list, :label => "Tags (seperated by commas)", :input_html => { :class => "form-control", :value => @blog.tag_list.join(", ") } %>
    </div>
    <div class="form-group">
      <%= f.label "Picture" %>
      <%= f.file_field :image, as: :file %>
    </div>
    <div class="form-group">
      <%= f.label :body %>
      <%= f.text_area :body, class: "ckeditor" %>
    </div>
  </div>

  <div class="form-actions text-center">
    <%= f.button :submit %>
  </div>
<% end %>
